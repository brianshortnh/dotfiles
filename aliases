#Program Aliases
alias py="python3"
alias alog="tail -f ~mlogs/apache_access.log | cut -d' ' -f4-10"
alias plog="tail -f ~mlogs/php_error.log"
alias qlog="tail -f ~mlogs/mysql_error_log.err"
alias awk="gawk"
alias tkills="tmux kill-session -t"
alias tkillw="tmux kill-window -t"
alias dog="cat"
alias grl="grep -lR"
alias grn="grep -nR"
alias grli="grep -lRi"
alias grep="ggrep"
alias phpx="php -d xdebug.profiler_enable=1"
#remove if not on Mac
alias ls="gls --color=auto --group-directories-first"
alias hg="history | grep"
alias pu="./vendor/bin/phpunit"

#Dotfile Aliases
alias aliases="vim ~/.aliases"
alias salias="source ~/.aliases"

alias ndirs="vim ~/.named_dirs"
alias sndirs="source ~/.named_dirs"

alias vrc="vim ~/.vimrc"

alias zrc="vim ~/.zshrc"

alias envo="vim ~/.environment"

alias tconf="vim ~/.tmux.conf"

alias gitc="vim ~/.gitconfig"
alias sgitc="source ~/.gitconfig"

alias notes="vim ~/.notes.md"

alias phpini="vim /Applications/MAMP/bin/php/php7.0.16/conf/php.ini"
alias phpini2="vim /Applications/MAMP/conf/php7.0.16/php.ini"
